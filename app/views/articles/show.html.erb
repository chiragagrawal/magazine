<p id="notice"><%= notice %></p>
<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
    </tr>
   </thead>
<tbody>
    <tr>
        <td><%= @article.title %></td>
        <td><%= @article.body %></td>
        <td><%= @article.author %></td>
    </tr>
</tbody>
</table>
<table class = "table">
  <thead>
  <tr>
    <th>Comments</th>
  </tr>
  </thead>

  <% @article.comments.each do |comment| %>
  <tbody>
      <tr>
        <td><%= comment.comment %></td>
        <%= link_to 'Delete', article_comment_path(@article.id,comment) %>
      </tr>
  </tbody>
  <% end %>
</table>
<h5><b>Write your Comments</b></h5>
    <%= form_for    :comments,  :url=> article_comments_path(@article.id), :method => :post do |f| %>
        <%= f.label :comment %>
        <%= f.text_field    :comment %>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>

